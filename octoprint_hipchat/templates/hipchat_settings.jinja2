<h4>{{ _('Settings') }}</h4>

<form class="form-horizontal">
    <div class="control-group">
      <label class="control-label" for="settings-hipchat-url">{{ _('URL') }}</label>
      <div class="controls">
        <input type="text" class="input-block-level" data-bind="value: settings.plugins.hipchat.api_url">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="settings-hipchat-token">{{ _('Token') }}</label>
      <div class="controls">
        <input type="text" class="input-block-level" data-bind="value:settings.plugins.hipchat.token">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="settings-hipchat-room">{{ _('Room') }}</label>
      <div class="controls">
        <input type="text" class="input-block-level" data-bind="value:settings.plugins.hipchat.room">
      </div>
    </div>
</form>
